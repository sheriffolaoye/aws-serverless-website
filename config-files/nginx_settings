server {
        listen 80 default_server;
        listen [::]:80 default_server;

        location / {
                proxy_pass http://unix:/tmp/website.sock;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }

        location /rest {
                proxy_pass http://unix:/tmp/restapi.sock;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }
}
